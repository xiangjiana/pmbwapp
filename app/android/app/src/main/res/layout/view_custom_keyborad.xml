<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="16dp"
    android:paddingBottom="30dp"
    android:id="@+id/constraint"
    android:background="@drawable/round_customkeyboard_back"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_one"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/tv_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="6dp"
        android:id="@+id/tv_two"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/tv_three"
        app:layout_constraintStart_toEndOf="@+id/tv_one"
        app:layout_constraintTop_toTopOf="@+id/tv_one" />
    <TextView
        android:layout_marginLeft="6dp"
        android:id="@+id/tv_three"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/tv_delede"
        app:layout_constraintStart_toEndOf="@+id/tv_two"
        app:layout_constraintTop_toTopOf="@+id/tv_one" />

    <ImageView
        app:layout_constraintBottom_toBottomOf="@+id/tv_four"
        android:layout_marginLeft="6dp"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="@+id/tv_one"
        app:layout_constraintStart_toEndOf="@+id/tv_three"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_delede"
        style="@style/custom_keyboard_textview"
        android:layout_width="66dp"
        android:layout_height="0dp"
        android:src="@mipmap/keyboard_delete" />
    <TextView
        app:layout_constraintEnd_toEndOf="@+id/tv_delede"
        app:layout_constraintStart_toStartOf="@+id/tv_delede"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comma"
        app:layout_constraintTop_toTopOf="@+id/tv_seven"
        android:id="@+id/tv_sure"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="14dp"
        android:background="@drawable/selector_custom_keyboard_sure_textview"
        android:text="@string/que_ren" />

    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_one"
        app:layout_constraintStart_toStartOf="@+id/tv_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_one"
        android:id="@+id/tv_four"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="4" />

    <TextView
        app:layout_constraintStart_toStartOf="@+id/tv_two"
        app:layout_constraintEnd_toEndOf="@+id/tv_two"
        app:layout_constraintTop_toTopOf="@+id/tv_four"
        android:id="@+id/tv_five"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="5" />

    <TextView
        app:layout_constraintStart_toStartOf="@+id/tv_three"
        app:layout_constraintEnd_toEndOf="@id/tv_three"
        app:layout_constraintTop_toTopOf="@+id/tv_four"
        android:id="@+id/tv_six"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="6" />



    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tv_one"
        app:layout_constraintEnd_toEndOf="@id/tv_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_four"
        android:id="@+id/tv_seven"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="7" />

    <TextView
        app:layout_constraintStart_toStartOf="@+id/tv_two"
        app:layout_constraintEnd_toEndOf="@+id/tv_two"
        app:layout_constraintTop_toTopOf="@+id/tv_seven"
        android:id="@+id/tv_eight"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="8" />

    <TextView
        app:layout_constraintStart_toStartOf="@+id/tv_three"
        app:layout_constraintEnd_toEndOf="@+id/tv_three"
        app:layout_constraintTop_toTopOf="@+id/tv_seven"
        android:id="@+id/tv_nine"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="9" />


    <TextView
        android:background="@drawable/selector_custom_keyboard_textview"
        app:layout_constraintTop_toTopOf="@+id/tv_zero"
        app:layout_constraintBottom_toBottomOf="@+id/tv_zero"
        app:layout_constraintTop_toBottomOf="@+id/tv_seven"
        app:layout_constraintStart_toStartOf="@id/tv_one"
        app:layout_constraintEnd_toEndOf="@+id/tv_one"
        android:id="@+id/tv_comma"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="  ." />

    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_seven"
        app:layout_constraintStart_toStartOf="@id/tv_two"
        app:layout_constraintEnd_toEndOf="@+id/tv_two"
        android:id="@+id/tv_zero"
        style="@style/custom_keyboard_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview"
        android:text="0" />

    <ImageView
        android:scaleType="center"
        android:src="@mipmap/pack_up"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_seven"
        app:layout_constraintStart_toStartOf="@id/tv_nine"
        app:layout_constraintEnd_toEndOf="@+id/tv_nine"
        android:id="@+id/tv_keyboard_closed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_custom_keyboard_textview" />





</androidx.constraintlayout.widget.ConstraintLayout>