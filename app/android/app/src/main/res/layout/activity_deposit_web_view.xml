<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".activity.ActivityPublicWebView">
    <ImageView
        android:id="@+id/iv_title_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_151E25"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageView
        app:layout_constraintStart_toStartOf="@+id/iv_title_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_title_back"
        app:layout_constraintTop_toTopOf="@+id/iv_title_back"
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@mipmap/com_back" />

    <TextView
        app:layout_constraintEnd_toEndOf="@+id/iv_title_back"
        app:layout_constraintStart_toStartOf="@+id/iv_title_back"
        app:layout_constraintBottom_toBottomOf="@+id/iv_title_back"
        app:layout_constraintTop_toTopOf="@+id/iv_title_back"
        android:layout_marginStart="16dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="存款信息"
        android:textSize="18dp"
        android:textColor="@color/white" />


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_title_back"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>